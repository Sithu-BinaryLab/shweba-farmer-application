<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Canel">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#76dbd1"
            android:paddingTop="30px"
            android:text="သမဝါယမ/ဆည်မြောင်းဌာန"
            android:textAlignment="center"
            android:textSize="27dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="55dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="5dp"
        android:background="#fff"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingBottom="70px"
            android:layout_marginTop="35px"
            android:hint="ခေါင်းစဥ်\n"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingBottom="70px"
            android:layout_marginTop="35px"
            android:hint="ဌာန\n"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/mtown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingBottom="70px"
            android:layout_marginTop="35px"
            android:hint="မြို့နယ်\n"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingBottom="70px"
            android:layout_marginTop="35px"
            android:hint="ကုတ်နံပါတ်\n"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingBottom="70px"
            android:layout_marginTop="35px"
            android:hint="ရက်စွဲ\n"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="left|top"
            android:paddingLeft="30px"
            android:layout_marginTop="35px"
            android:hint="အကြောင်းအရာ အကျဥ်းချုပ်\n"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="92dp">

            <requestFocus />

        </EditText>

        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_marginTop="55px"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="70dp"
            android:background="@drawable/loginbutton"
            android:text="တင်မည်"
            android:textSize="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>